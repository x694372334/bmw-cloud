<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bmw.app.dao.CommodityMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.bmw.app.model.Commodity">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="type" property="type" />
        <result column="specification" property="specification" />
        <result column="unit" property="unit" />
        <result column="price" property="price" />
        <result column="category" property="category" />
        <result column="is_recommend" property="isRecommend" />
        <result column="back_ground_url" property="backGroundUrl" />
        <result column="commodity_url" property="commodityUrl" />
        <result column="detail_link" property="detailLink" />
        <result column="is_change" property="isChange" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, name, type, specification, unit, price, category, is_recommend AS isRecommend, back_ground_url AS backGroundUrl, commodity_url AS commodityUrl, detail_link AS detailLink, is_change AS isChange
    </sql>

</mapper>
